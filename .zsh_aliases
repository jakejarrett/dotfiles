#!/bin/sh

# Aliases to start/kill bar
alias killbar="pkill ~/.config/.bar/clock & pkill ~/.config/.bar/window & pkill ~/.config/.bar/music & pkill lemonbar"
alias startbar="~/.config/.bar/clock & sleep .5s && ~/.config/.bar/window & ~/.config/.bar/music"

# Webdev
alias mkproject="~/scripts/dev/dev"

# Scrot
alias scrot='cd ~/Pictures/Screenshots && scrot'

# Colortest
alias colortest="~/scripts/colortest/colortest"

# tar commands to make life easy
alias mktar="tar -cvf"
alias untar="tar -xvf"

alias mkbz2="tar -cvjf"
alias unbz2="tar -xvjf"

alias mkgz="tar -cvzf"
alias ungz="tar -xvzf"
